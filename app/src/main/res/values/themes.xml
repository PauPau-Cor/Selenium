<resources>
    <!-- Base application theme. -->
    <style name="Theme.ReminderApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/midpoint_green_main</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkestwhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_inset</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.ReminderApp</item>
    </style>

    <style name="BG">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TXT">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BTTN">
        <item name="android:fontFamily">@font/louiscafebold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BTTN2">
        <item name="toggle_backgroundColor">@color/darkestwhite</item>
        <item name="toggle_textColor">@color/black</item>
        <item name="toggle_fontFamily">"/fonts/louiscafebold.ttf"</item>
        <item name="android:fontFamily">@font/louiscafebold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/darkestwhite</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="FAB">
        <item name="backgroundTint">@color/lightcolor</item>
        <item name="tint">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FABBigger" parent="Widget.Material3.FloatingActionButton.Large.Tertiary">
        <item name="backgroundTint">@color/lightcolor</item>
        <item name="tint">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TABSLYT">
        <item name="android:background">@color/darkerwhite</item>
        <item name="tabTextAppearance">@style/TABSTXT</item>
    </style>

    <style name="TABSTXT">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/planner</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="CRD" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/darkerwhite</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="CRDDIALOG" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="TOLBR">
        <item name="android:background">@color/darkestwhite</item>
    </style>

    <style name="TOLBTTXT" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/planner</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DRWRHDR">
        <item name="cardBackgroundColor">@color/darkestwhite</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="CRDMENU">
        <item name="cardBackgroundColor">@color/darkerwhite</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="DRWR">
        <item name="android:background">@color/darkerwhite</item>
    </style>

    <!-- TODO: what's up with this lol -->
    <style name="outlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_field_light</item>
        <item name="android:textColorHint">@color/text_field_light</item>
        <item name="passwordToggleTint">@color/black</item>
        <item name="colorPrimary">@color/darkestwhite</item>
    </style>

    <style name="outlinedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_field_light</item>
        <item name="android:textColorHint">@color/text_field_light</item>
        <item name="endIconTint">@color/text_field_light</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="DropdownTXT" parent="TXT">
        <item name="android:popupBackground">@drawable/background_dropdown_menu_light</item>
    </style>

    <style name="DropdownMenuItem" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/louiscafebold</item>
    </style>
</resources>